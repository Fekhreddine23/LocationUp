# Backend profile
SPRING_PROFILES_ACTIVE=prod
SERVER_PORT=8080

# Database (PostgreSQL)
SPRING_DATASOURCE_URL=jdbc:postgresql://db:5432/locationup
SPRING_DATASOURCE_USERNAME=locationup
SPRING_DATASOURCE_PASSWORD=locationup

# JWT (replace with strong secret, >=32 bytes)
APP_JWT_SECRET=please-change-me-32bytes-min
APP_JWT_EXPIRATION=900000
APP_JWT_REFRESH_EXPIRATION=604800000

# CORS (comma-separated origins for your frontend domains)
APP_CORS_ALLOWED_ORIGINS=http://localhost

# API URL utilisée au build frontend (URL complète de l'API backend)
API_URL=http://localhost:8080

# Stripe (clés TEST, même en prod : ne pas utiliser de clés live)
STRIPE_SECRET_KEY=sk_test_replace_me
STRIPE_PUBLIC_KEY=pk_test_replace_me
STRIPE_WEBHOOK_SECRET=whsec_test_replace_me
STRIPE_IDENTITY_WEBHOOK_SECRET=whsec_identity_test_replace_me
